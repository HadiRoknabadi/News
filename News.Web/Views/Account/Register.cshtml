@model RegisterViewModel
<div class="container">
    <h2 class="text-center">ثبت نام</h2>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">

        </div>

    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 form-border margin-bottom-15">
            <form class="padding-top-8" action="/Register" method="post">


                <div class="form-group">
                    <label for="UserName">نام کاربری</label>
                    <input class="form-control" type="text" id="UserName" value="" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">ایمیل</label>
                    <input class="form-control" type="email" id="Email" value="" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">رمز عبور</label>
                    <input class="form-control" type="password" id="Password" value="" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="RePassword">تکرار رمز عبور</label>
                    <input class="form-control" asp-for="RePassword" type="password" id="RePassword" value="" >
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                
                <button class="btn btn-success btn-block margin-bottom-15" type="submit">ورود</button>
            </form>

        </div>

    </div>
</div>