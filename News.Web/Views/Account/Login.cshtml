@model News.Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container">
    <h2 class="text-center">ورود</h2>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            @if (ViewBag.SuccessLogin == false)
            {
                <div div class="alert alert-danger">
                    <p class="text-center">عملیات با خطا مواجه شد</p>
                </div>
            }

        </div>

    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 form-border margin-bottom-15">
            <form asp-action="Login" class="padding-top-8">


                <div class="form-group">
                    <label asp-for="UserName">نام کاربری</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Password">رمز عبور</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RememberMe">مرا به خاطر بسپار</label>
                    <input asp-for="RememberMe" type="checkbox" />
                </div>

                <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl"/>

                <button class="btn btn-success btn-block margin-bottom-15" type="submit">ورود</button>


            </form>

        </div>

    </div>
</div>


